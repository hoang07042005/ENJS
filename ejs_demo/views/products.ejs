<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    
</head>
<body>
    <div class="container mt-5">
        <!-- <a href="/products/add" class="btn btn-success"style="margin-top: 20px; margin-bottom:20px ;background-color: #28a745; border-color: #28a745; font-size: 16px; font-weight: bold;">Add New Product</a> -->
        <div class="row">
            <% if (products && products.length > 0) { %>
                <% products.forEach(function(product) { %>
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" style="height: 33vh;">

                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text">Price: $<%= product.price %></p>
                                <p class="card-text"><%= product.description %></p>
                            </div>

                            <div class="view" style="margin-bottom: 2vh; margin-left: 3vh;">
                                <a href="/products/<%= product.id %>" style="display: inline-block; padding: 8px 16px; font-size: 16px; font-weight: bold; color: #fff; background-color: #28a745;
                                text-align: center; text-decoration: none; border-radius: 5px; transition: background-color 0.3s ease;
                                ">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products available.</p>
            <% } %>
        </div>
    </div>
</body>
</html>

